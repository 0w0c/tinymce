    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "tinymce": ["src/core/dist/tinymce"],
      "tinymce/core/*": ["src/core/dist/globals/tinymce/core/*"],
      "tinymce/ui/*": ["src/ui/src/main/ts/*"],
      "tinymce/themes/modern/*": ["src/themes/modern/src/main/ts/*"],
      "tinymce/themes/inlite/*": ["src/themes/inlite/src/main/ts/*"],
      "tinymce/plugins/advlist": ["src/plugins/advlist/src/main/ts/*"],
      "tinymce/plugins/anchor": ["src/plugins/anchor/src/main/ts/*"],
