      "tinymce/plugins/paste": ["src/plugins/paste/src/main/ts/*"],
      "tinymce/plugins/preview": ["src/plugins/preview/src/main/ts/*"],
      "tinymce/plugins/print": ["src/plugins/print/src/main/ts/*"],
      "tinymce/plugins/save": ["src/plugins/save/src/main/ts/*"],
      "tinymce/plugins/searchreplace": ["src/plugins/searchreplace/src/main/ts/*"],
