      "tinymce/plugins/fullscreen": ["src/plugins/fullscreen/src/main/ts/*"],
      "tinymce/plugins/help": ["src/plugins/help/src/main/ts/*"],
      "tinymce/plugins/hr": ["src/plugins/hr/src/main/ts/*"],
      "tinymce/plugins/image": ["src/plugins/image/src/main/ts/*"],
      "tinymce/plugins/imagetools": ["src/plugins/imagetools/src/main/ts/*"],
      "tinymce/plugins/importcss": ["src/plugins/importcss/src/main/ts/*"],
      "tinymce/plugins/insertdatetime": ["src/plugins/insertdatetime/src/main/ts/*"],
