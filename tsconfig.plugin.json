      "tinymce/plugins/autoresize": ["src/plugins/autoresize/src/main/ts/*"],
      "tinymce/plugins/autosave": ["src/plugins/autosave/src/main/ts/*"],
      "tinymce/plugins/bbcode": ["src/plugins/bbcode/src/main/ts/*"],
      "tinymce/plugins/charmap": ["src/plugins/charmap/src/main/ts/*"],
      "tinymce/plugins/code": ["src/plugins/code/src/main/ts/*"],
