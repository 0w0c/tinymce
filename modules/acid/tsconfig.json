{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015"],
    "types": [],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "ephox/acid/test/*": ["src/test/ts/module/ephox/acid/test/*"],
