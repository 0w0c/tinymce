{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "ephox/jax/test/*": ["src/test/ts/module/ephox/jax/test/*"],
      "ephox/jax/demo/*": ["src/demo/ts/ephox/jax/demo/*"],
      "ephox/jax/*": ["src/main/ts/ephox/jax/*"],
      "@ephox/jax": ["src/main/ts/ephox/jax/api/Main.ts"]
    },
    "noUnusedLocals": true,
    "types": []
  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts",
    "node_modules/@ephox/**/*/api/Main.d.ts"
  ]
}
