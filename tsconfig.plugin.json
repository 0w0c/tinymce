  "include": [
    "src/ui/src/main/ts",
    "src/ui/src/demo/ts",
    "src/ui/src/test/ts",
    "src/plugins/*/src/main/ts",
    "src/plugins/*/src/demo/ts",
    "src/plugins/*/src/test/ts",
    "src/themes/*/src/main/ts",
    "src/themes/*/src/test/ts",
    "src/core/dist/globals/tinymce/core/",
    "src/core/dist/globals/**/*.ts",
    "node_modules/@ephox/**/*/api/Main.d.ts"
