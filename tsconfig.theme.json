{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "tinymce": ["src/core/dist/tinymce"],
      "tinymce/core/*": ["lib/globals/tinymce/core/*"],
      "tinymce/themes/mobile/*": ["src/themes/mobile/main/ts/*"],
      "tinymce/themes/silver/*": ["src/themes/silver/main/ts/*"]
    }
  },
  "include": [
    "src/themes/*/main/ts",
    "src/themes/*/src/demo/ts",
    "src/themes/*/src/test/ts",
    "src/core/dist/globals/tinymce/core/",
    "src/core/dist/globals/**/*.ts",
  ]
}
